dimension: lens_icon {
  label: "Lens Icon"
  html:
    CASE
      WHEN ${strategic_lens_l1} = 'Risk Management' THEN '<img src="https://yourcdn.com/icons/shield.png" alt="Risk" style="width:24px;height:24px;">'
      WHEN ${strategic_lens_l1} = 'Cyber Security' THEN '<img src="https://yourcdn.com/icons/lock.png" alt="Cyber" style="width:24px;height:24px;">'
      WHEN ${strategic_lens_l1} = 'People & Culture' THEN '<img src="https://yourcdn.com/icons/people.png" alt="People" style="width:24px;height:24px;">'
      ELSE '<img src="https://yourcdn.com/icons/default.png" alt="Other" style="width:24px;height:24px;">'
    END ;;
  description: "Lens category icon. Icons should be hosted on a web-accessible server/CDN."
}
