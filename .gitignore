          {/* Risk Insight */}
          <RiskInsightInput
            value={riskInsight}
            onChange={handleRiskInsightChange}
          />
          {showInsightTip && (
            <Box sx={{ mt: 1, mb: 2 }}>
              <Alert
                severity="info"
                variant="outlined"
                onClose={() => setShowInsightTip(false)}
                sx={{ fontSize: "0.95rem", bgcolor: "#f0f8ff" }}
              >
                Tip: Number your insights (e.g., <b>1.</b>, <b>2.</b>) for clarity.
                Example: <i>1. There is a risk due to ...</i>
              </Alert>
            </Box>
          )}

{/* Risk Mitigations */}
          <RiskMitigationsInput
            mitigations={mitigations}
            onChange={handleMitigationsChange}
          />
          {showMitigTip && (
            <Box sx={{ mt: 1, mb: 2 }}>
              <Alert
                severity="info"
                variant="outlined"
                onClose={() => setShowMitigTip(false)}
                sx={{ fontSize: "0.95rem", bgcolor: "#f0f8ff" }}
              >
                Tip: Use sub-numbers for mitigations (e.g., <b>1a.</b>, <b>1b.</b>)
                to match insights. Example: <i>1a. Review access logs weekly</i>
              </Alert>
            </Box>
          )}
